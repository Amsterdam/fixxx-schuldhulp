
            {{ form_start(form, {'attr': {'class': 'ajax default-form-style'} }) }}
            <div class="accordion" id="voorlegger-kostgeld">
                <div class="accordion-header">
                    <div class="voorlegger-header">
                        <div class="naam">
                            <a href="#voorlegger-kostgeld">Kostgeld</a>
                        </div>
                        <div class="status">
                            <span class="{{ dossier.voorlegger.kostgeldOntvangenMadi ? 'afgerond' : 'open' }}">MaDi</span>
                            <span class="{{ dossier.voorlegger.kostgeldOntvangenGka ? 'afgerond' : 'open' }}">GKA</span>
                        </div>
                        <div class="nvt">
                            <span class="{{ dossier.voorlegger.kostgeldNvt ? 'nvt' : 'open' }}">{{ dossier.voorlegger.kostgeldNvt ? 'n.v.t.' }}</span>
                        </div>
                    </div>
                </div>
                <div class="accordion-body">
                    <div class="voorlegger-body">
                        {{ form_row(form.kostgeldNvt) }}
                        {{ form_row(form.kostgeldOntvangenMadi) }}
                        {{ form_row(form.kostgeldOntvangenGka) }}
                        {% include 'partial.files-container.html.twig' with {'form_elm': form.file} only %}
