{% if schuldItem.verwijderd == false %}
            <div class="accordion" id="schuldItem-{{ schuldItem.id }}">
                <div class="accordion-header">
                    <div class="schulditem-header">
                        <div class="naam">
                            <a href="#schuldItem-{{ schuldItem.id }}">
                                <strong>{{ schuldItem.schuldeiser.bedrijfsnaam|default('-') }}
                                {% if schuldItem.incassant %} / {{ schuldItem.incassant.bedrijfsnaam }}{% endif %}
                                </strong>
                                <span class="referentie">(referentie: {{ schuldItem.referentie }})</span>
                            </a>
                        </div>
                        <div class="voortgang">
                            {{ schuldItem.dossierDocumenten|length }} document(en)
                        </div>
                        <div class="bedrag">
                            &euro; {{ schuldItem.bedrag|number_format(2, ',', '.') }}
                        </div>
                    </div>
                </div>
                <div class="accordion-body">
                    <div class="schulditem-body">
                        {% form_theme form with ['forms2.html.twig'] only %}
                        {{ form_start(form, {'attr': {'class': 'ajax default-form-style'} }) }}
                        <div class="columns">
                            <div class="column">
                                {{ form_row(form.schuldeiser) }}
                                {{ form_row(form.incassant) }}
                                {{ form_row(form.type) }}
                                {{ form_row(form.referentie) }}
                            </div>
                            <div class="column">
                                {{ form_row(form.bedrag) }}
                                {{ form_row(form.vastStelDatum) }}
                                {{ form_row(form.ontstaansDatum) }}
                            </div>
                        </div>
                        <div class="files-container">
                            <div class="file-container prototype" data-name="{{ form.file.vars.prototype.file.vars.full_name }}">
                                {{ form_widget(form.file.vars.prototype.naam, {'attr': {'placeholder': 'Voer een naam in voor het document'} }) }}
                                <div class="file-selector">
                                    <button>Selecteer een bestand</button>
                                    {{ form_widget(form.file.vars.prototype.file) }}
                                </div>
                                <div class="drop-area"></div>
                            </div>
                            <a class="add" href="#add">Nieuw bestand toevoegen</a>
                        </div>
                        {% do form.file.setRendered() %}
                        {% if schuldItem.dossierDocumenten|length > 0 %}
                        <p>Bestanden:</p>
                        <ul>
                            {% for dossierDocument in schuldItem.dossierDocumenten %}
                                <li><a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_detaildocument', {'dossierId': dossier.id, 'documentId': dossierDocument.document.id}) }}">{{ dossierDocument.document.naam }}</a></li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                        <div class="nav">
                            <button type="submit" class="remove" name="{{ form.verwijderd.vars.full_name }}" value="1">Verwijderen</button>
                            {% do form.verwijderd.setRendered() %}
                            <button type="submit">Opslaan</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
{% endif %}