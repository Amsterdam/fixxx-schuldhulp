{% extends 'base.html.twig' %}

{% block title %}
	Dossierindex
{% endblock %}
{% block maintag %}
<main class="dossiers">
{% endblock %}
{% block main %}
<section id="formulierKop">
    <h1>Dossiers</h1>
    <p>
        <a class="primair" href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_create') }}">Maak nieuw dossier aan</a> |
        <a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_indexprullenbak') }}">Prullenbak</a>
    </p>
</section>
<section>
    <h2>Bestaande dossiers</h2>
    <table>
        <thead>
            <tr>
                <th>Naam</th>
                <th>MaDi</th>
                <th>Regas</th>
                <th>Allegro</th>
                <th>Aanmaak datum dossier</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
{% for dossier in dossiers %}
            <tr>
                <td><a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_detail', {'dossierId': dossier.Id}) }}">{{ dossier.clientNaam }}</a></td>
                <td>{{ dossier.schuldhulpbureau }}</td>
                <td class="nummer">
                    {{ dossier.regasNummer|default('-') }}
                </td>
                <td class="nummer">
                    {{ dossier.allegroNummer|default('-') }}
                </td>
                <td class="datum">
                    {{ dossier.aanmaakDatumTijd|date('d-m-Y') }}
                </td>
                <td>{{ dossier.status }}</td>
            </tr>
{% endfor %}
       </tbody>
    </table>
</section>
{% endblock %}
