{% import 'partial.macros.html.twig' as tools %}
{% set dossierDocumenten = dossier.getNietVerwijderdeDocumentenByOnderwerp('huurtoeslag') %}
  
            <div class="accordion {{ app.request.isXmlHttpRequest ? 'active' }}" id="voorlegger-huurtoeslag">
                <div class="accordion-header">
                    
                    <div class="voorlegger-header{{ dossier.voorlegger.huurtoeslagNvt ? ' nvt' }}">
                        <h3 class="naam">
                            <a href="#voorlegger-huurtoeslag" data-handler="toggle">Huurtoeslag</a>
                        </h3>
                        {% if dossierDocumenten|length > 0 %}
                          <div class="voortgang">
                            {{ dossierDocumenten|length }} document{% if dossierDocumenten|length != 1 %}en{% endif %}
                          </div>
                        {% endif %}
                        <div class="nvt" data-changer="nvt">
                            {{ form_row(form.huurtoeslagNvt) }}
                        </div>
                        <div class="status-container">
                          {{ form_row(form.huurtoeslagOntvangenMadi) }}
                          {{ form_row(form.huurtoeslagOntvangenGka) }}
                        </div>
                    </div>
                    
                </div>
                <div class="accordion-body">
                    <div class="voorlegger-body">
                        {% include 'partial.files-container.html.twig' with {'form_elm': form.file, 'defaultDocumentNaam': 'Huurtoeslag'} only %}
                        {% include 'partial.files-list.html.twig' with {'dossierDocumenten': dossierDocumenten, 'removeFile': form.removeFile} only %}
                        {{ form_row(form.aantekening) }}
                        {% include 'Dossier/partial.aantekeningen.html.twig' with {'aantekeningen': dossier.getAantekeningenByOnderwerp('huurtoeslag')} only %}
                    </div>
                </div>
            </div>
