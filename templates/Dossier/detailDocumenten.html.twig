{% extends 'master.html.twig' %}

{% block title %}{{ dossier.clientNaam }} - {{ parent() }}{% endblock %}

{% block document %}

<nav class="nav-internal">
    <ul>
        <li><a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_detailalgemeen', {'dossierId': dossier.id}) }}"><i class="icon-arrow-left"></i> Terug naar dossier</a></li>
    </ul>
</nav>

<div class="document well">
    
    {% include 'Dossier/partial.dossierDetailHeader.html.twig' with {'dossier': dossier} only %}
    
    {% include 'Dossier/partial.dossierDetailNav.html.twig' with {'dossier': dossier, 'active': 'alleDocumenten'} only %}
    
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>Document</th>
                    <th>Gelinkt aan</th>
                </tr>
            </thead>
            <tbody>
{% set empty = true %}
{% for document in dossier.documenten if document.document.inPrullenbak == false %}
{% set empty = false %}
                <tr>
                    <th>
                        <a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_detaildocument', {'dossierId': dossier.id, 'documentId': document.document.id}) }}">{{ document.document.naam }}</a>
                    </th>
                    <td>
{% if document.schuldItem %}Schulditem: {{ document.schuldItem.schuldeiser.bedrijfsnaam }}/{{ document.schuldItem.referentie }}{% endif %} 
{% if document.onderwerp %}Onderwerp: {{ document.onderwerp}}{% endif %} 
                    </td>
                </tr>
{% endfor %}
            </tbody>
        </table>
{% if empty %}
        <p class="empty-table">Er zijn nog geen documenten in dit dossier toegevoegd.</p>
{% endif %}
    </div>
</div>
{% endblock %}