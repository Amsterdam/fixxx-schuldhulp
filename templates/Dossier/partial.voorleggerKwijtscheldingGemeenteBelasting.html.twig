{% import 'partial.macros.html.twig' as tools %}
{% set dossierDocumenten = dossier.getDocumentenByOnderwerp('kwijtscheldingGemeenteBelasting') %}
  
            <div class="accordion {{ app.request.isXmlHttpRequest ? 'active' }}" id="voorlegger-kwijtscheldingGemeenteBelasting">
                <div class="accordion-header">
                    
                    <div class="voorlegger-header">
                        <h3 class="naam">
                            <a href="#voorlegger-kwijtscheldingGemeenteBelasting" data-handler="toggle">Kwijtschelding gemeente belasting</a>
                        </h3>
                        {% if dossierDocumenten %}
                          <div class="voortgang">
                            {{ dossierDocumenten|length }} document{% if dossierDocumenten|length != 1 %}en{% endif %}
                          </div>
                        {% endif %}
                        <div class="status-container">
                          {{ form_row(form.kwijtscheldingGemeenteBelastingOntvangenMadi) }}
                          {{ form_row(form.corrigerenGemeenteBelastingOntvangenGka) }}
                        </div>
                        <div class="nvt">
                            <span class="{{ dossier.voorlegger.kwijtscheldingGemeenteBelastingNvt ? 'nvt' : 'open' }}">{{ dossier.voorlegger.kwijtscheldingGemeenteBelastingNvt ? 'n.v.t.' }}</span>
                        </div>
                    </div>
                    
                </div>
                <div class="accordion-body">
                    <div class="voorlegger-body">
                        {{ form_row(form.kwijtscheldingGemeenteBelastingNvt) }}
                        {{ form_row(form.kwijtscheldingGemeenteBelasting) }}
                        {{ form_row(form.corrigerenGemeenteBelasting) }}
                        {% include 'partial.files-container.html.twig' with {'form_elm': form.file, 'defaultDocumentNaam': 'Kwijtschelding gemeente belasting'} only %}
                        {% include 'partial.files-list.html.twig' with {'dossierDocumenten': dossierDocumenten, 'removeFile': form.removeFile} only %}
                        {{ form_row(form.aantekening) }}
                        {% include 'Dossier/partial.aantekeningen.html.twig' with {'aantekeningen': dossier.getAantekeningenByOnderwerp('kwijtscheldingGemeenteBelasting')} only %}
                    </div>
                </div>
            </div>
