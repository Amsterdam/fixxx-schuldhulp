{% import 'partial.macros.html.twig' as tools %}
{% set dossierDocumenten = dossier.getNietVerwijderdeDocumentenByOnderwerp('zorgtoeslag') %}
  
            <div class="accordion {{ app.request.isXmlHttpRequest ? 'active' }}" id="voorlegger-zorgtoeslag">
                <div class="accordion-header">
                    
                    <div class="voorlegger-header{{ dossier.voorlegger.zorgtoeslagNvt ? ' nvt' }}">
                        <h3 class="naam">
                            <a href="#voorlegger-zorgtoeslag" data-handler="toggle">Zorgtoeslag</a>
                        </h3>
                        {% if dossierDocumenten|length > 0 %}
                          <div class="voortgang">
                            {{ dossierDocumenten|length }} document{% if dossierDocumenten|length != 1 %}en{% endif %}
                          </div>
                        {% endif %}
                        <div class="nvt">
                            {{ form_row(form.zorgtoeslagNvt) }}
                        </div>
                        <div class="status-container">
                          {{ form_row(form.zorgtoeslagOntvangenMadi) }}
                          {{ form_row(form.zorgtoeslagOntvangenGka) }}
                        </div>
                    </div>

                </div>
                <div class="accordion-body">
                    <div class="voorlegger-body">
                        {% include 'partial.files-container.html.twig' with {'form_elm': form.file, 'defaultDocumentNaam': 'Zorgtoeslag'} only %}
                        {% include 'partial.files-list.html.twig' with {'dossierDocumenten': dossierDocumenten, 'removeFile': form.removeFile} only %}
                        {{ form_row(form.aantekening) }}
                        {% include 'Dossier/partial.aantekeningen.html.twig' with {'aantekeningen': dossier.getAantekeningenByOnderwerp('zorgtoeslag')} only %}
                    </div>
                </div>
            </div>
