{% import 'partial.macros.html.twig' as tools %}
            {{ form_start(form, {'attr': {'class': 'ajax default-form-style'} }) }}
            <div class="accordion {{ app.request.isXmlHttpRequest ? 'active' }}" id="voorlegger-verklaringWerkgever">
                <div class="accordion-header">
                    <a href="#voorlegger-verklaringWerkgever" data-handler="toggle">
                        <div class="voorlegger-header">
                            <div class="naam">
                                Verklaring werkgever
                            </div>
                            <div class="status">
                                <span class="{{ tools.madi_status_to_class(dossier.voorlegger.verklaringWerkgeverOntvangenMadi) }}">MaDi</span>
                                <span class="{{ tools.gka_status_to_class(dossier.voorlegger.verklaringWerkgeverOntvangenGka) }}">GKA</span>
                            </div>
                            <div class="nvt">
                                <span class="{{ dossier.voorlegger.verklaringWerkgeverNvt ? 'nvt' : 'open' }}">{{ dossier.voorlegger.verklaringWerkgeverNvt ? 'n.v.t.' }}</span>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="accordion-body">
                    <div class="voorlegger-body">
                        {{ form_row(form.verklaringWerkgeverNvt) }}
                        {% include 'partial.files-container.html.twig' with {'form_elm': form.file, 'defaultDocumentNaam': 'Verklaring werkgever'} only %}
                        {% include 'partial.files-list.html.twig' with {'dossierDocumenten': dossier.getDocumentenByOnderwerp('verklaringWerkgever')} only %}
                        {{ form_row(form.verklaringWerkgeverOntvangenMadi) }}
                        {{ form_row(form.verklaringWerkgeverOntvangenGka) }}
                        <p class="buttons right">
                            <button class="button primary" type="submit">Opslaan</button>
                        </p>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}