{% import 'partial.macros.html.twig' as tools %}
{% set dossierDocumenten = dossier.getNietVerwijderdeDocumentenByOnderwerp('vrijwaringsbewijs') %}

            <div class="accordion {{ app.request.isXmlHttpRequest ? 'active' }}" id="voorlegger-vrijwaringsbewijs">
                <div class="accordion-header">

                    <div class="voorlegger-header{{ dossier.voorlegger.vrijwaringsbewijsNvt ? ' nvt' }}">
                        <h3 class="naam">
                            <a href="#voorlegger-vrijwaringsbewijs" data-handler="toggle">Vrijwaringsbewijs</a>
                        </h3>
                          <div class="voortgang">
                            {{ dossierDocumenten|length }} document{% if dossierDocumenten|length != 1 %}en{% endif %}
                          </div>
                        <div class="nvt">
                            {{ form_row(form.vrijwaringsbewijsNvt) }}
                        </div>
                        <div class="status-container">
                          {{ form_row(form.vrijwaringsbewijsOntvangenMadi) }}
                          {{ form_row(form.vrijwaringsbewijsOntvangenGka) }}
                        </div>
                    </div>

                </div>
                <div class="accordion-body">
                    <div class="voorlegger-body">
                        {% include 'partial.files-container.html.twig' with {'form_elm': form.file, 'defaultDocumentNaam': 'Vrijwaringsbewijs'} only %}
                        {% include 'partial.files-list.html.twig' with {'dossierDocumenten': dossierDocumenten, 'removeFile': form.removeFile} only %}
                        {{ form_row(form.aantekening) }}
                        {% include 'Dossier/partial.aantekeningen.html.twig' with {'aantekeningen': dossier.getAantekeningenByOnderwerp('vrijwaringsbewijs')} only %}
                    </div>
                </div>
            </div>
