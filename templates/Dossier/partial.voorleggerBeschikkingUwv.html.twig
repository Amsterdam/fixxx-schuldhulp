{% import 'partial.macros.html.twig' as tools %}
{% set dossierDocumenten = dossier.getNietVerwijderdeDocumentenByOnderwerp('beschikkingUwv') %}

            <div class="accordion {{ app.request.isXmlHttpRequest ? 'active' }}" id="voorlegger-beschikkingUwv">
                <div class="accordion-header">
                    
                    <div class="voorlegger-header{{ dossier.voorlegger.beschikkingUwvNvt ? ' nvt' }}">
                        <h3 class="naam">
                            <a href="#voorlegger-beschikkingUwv" data-handler="toggle">Beschikking UWV</a>
                        </h3>
                        {% if dossierDocumenten|length > 0 %}
                          <div class="voortgang">
                            {{ dossierDocumenten|length }} document{% if dossierDocumenten|length != 1 %}en{% endif %}
                          </div>
                        {% endif %}
                        <div class="nvt">
                            {{ form_row(form.beschikkingUwvNvt) }}
                        </div>
                        <div class="status-container">
                          {{ form_row(form.beschikkingUwvOntvangenMadi) }}
                          {{ form_row(form.beschikkingUwvOntvangenGka) }}
                        </div>
                    </div>
                    
                </div>
                <div class="accordion-body">
                    <div class="voorlegger-body">
                        {{ form_row(form.beschikkingUwvWw) }}
                        {{ form_row(form.beschikkingUwvWia) }}
                        {{ form_row(form.beschikkingUwvZw) }}
                        {{ form_row(form.beschikkingUwvOverig) }}
                        {% include 'partial.files-container.html.twig' with {'form_elm': form.file, 'defaultDocumentNaam': 'Beschikking UWV'} only %}
                        {% include 'partial.files-list.html.twig' with {'dossierDocumenten': dossierDocumenten, 'removeFile': form.removeFile} only %}
                        {{ form_row(form.aantekening) }}
                        {% include 'Dossier/partial.aantekeningen.html.twig' with {'aantekeningen': dossier.getAantekeningenByOnderwerp('beschikkingUwv')} only %}
                    </div>
                </div>
            </div>
