{% import 'partial.macros.html.twig' as tools %}
{% set dossierDocumenten = dossier.getNietVerwijderdeDocumentenByOnderwerp('legitimatie') %}
  
  
            <div class="accordion {{ app.request.isXmlHttpRequest ? 'active' }}" id="voorlegger-legitimatie">
                <div class="accordion-header">
                    
                    <div class="voorlegger-header">
                        <h3 class="naam">
                            <a href="#voorlegger-legitimatie" data-handler="toggle">Legitimatie</a>
                        </h3>
                        {% if dossierDocumenten %}
                          <div class="voortgang">
                            {% if dossierDocumenten|length > 0 %}{{ dossierDocumenten|length }} document{% if dossierDocumenten|length != 1 %}en{% endif %}{% endif %}
                          </div>
                        {% endif %}
                        <div class="status-container">
                          {{ form_row(form.legitimatieOntvangenMadi) }}
                          {{ form_row(form.legitimatieOntvangenGka) }}
                        </div>
                        <div class="nvt">
                        </div>
                    </div>
                    
                </div>
                <div class="accordion-body">
                    <div class="voorlegger-body">
                        {% include 'partial.files-container.html.twig' with {'form_elm': form.file, 'defaultDocumentNaam': 'Legitimatie'} only %}
                        {% include 'partial.files-list.html.twig' with {'dossierDocumenten': dossierDocumenten, 'removeFile': form.removeFile} only %}
                        {{ form_row(form.aantekening) }}
                        {% include 'Dossier/partial.aantekeningen.html.twig' with {'aantekeningen': dossier.getAantekeningenByOnderwerp('legitimatie')} only %}
                    </div>
                </div>
            </div>
