            {% form_theme form with ['forms2.html.twig'] only %}
            {{ form_start(form, {'attr': {'class': 'ajax default-form-style'} }) }}
            <div class="accordion" id="voorlegger-legitimatie">
                <div class="accordion-header">
                    <div class="voorlegger-header">
                        <div class="naam">
                            <a href="#voorlegger-legitimatie">Legitimatie</a>
                        </div>
                        <div class="status">
                            <span class="{{ dossier.voorlegger.legitimatieOntvangenMadi ? 'afgerond' : 'open' }}">MaDi</span>
                            <span class="{{ dossier.voorlegger.legitimatieOntvangenGka ? 'afgerond' : 'open' }}">GKA</span>
                        </div>
                        <div class="nvt">
                        </div>
                    </div>
                </div>
                <div class="accordion-body">
                    <div class="voorlegger-body">
                        {{ form_row(form.legitimatieOntvangenMadi) }}
                        {{ form_row(form.legitimatieOntvangenGka) }}
                        {% include 'partial.files-container.html.twig' with {'form_elm': form.file} only %}
                        {% include 'partial.files-list.html.twig' with {'dossierDocumenten': dossier.getDocumentenByOnderwerp('legitimatie')} only %}
                        <div class="nav">
                            <button type="submit">Opslaan</button>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
