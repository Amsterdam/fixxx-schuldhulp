{% extends 'master.html.twig' %}

{% block title %}{{ dossier.clientNaam }} - {{ parent() }}{% endblock %}

{% block document %}

<nav class="nav-internal">
    <ul>
        <li><a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_detail', {'dossierId': dossier.id}) }}"><i class="icon-arrow-left"></i> Terug naar dossier</a></li>
    </ul>
</nav>

<div class="document well">
    <div class="document-header">
        <h1 class="document-title">Overige documenten: {{ dossier.clientNaam }}</h1>
    </div>
    <div class="tabs">
        <ul>
            <li class=""><a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_detail', {'dossierId': dossier.id}) }}">Aanmelding</a></li>
            <li class=""><a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_detailschulden', {'dossierId': dossier.id}) }}">Schulden</a></li>
            <li class="active"><a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_detailoverigedocumenten', {'dossierId': dossier.id}) }}">Overige documenten</a></li>
        </ul>
    </div>
    {{ form_start(form, {'attr': {'class': 'default-form-style'} }) }}
    {% include 'partial.files-container.html.twig' with {'form_elm': form.file} only %}
    {#% include 'partial.files-list.html.twig' with {'dossierDocumenten': schuldItem.dossierDocumenten} only %#}
    <p class="buttons right">
        <button type="submit" class="button primary">Opslaan</button>
    </p>
    {{ form_end(form) }}
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>Document</th>
                    <th>Gelinkt aan</th>
                </tr>
            </thead>
            <tbody>
{% set empty = true %}
{% for document in dossier.documenten if document.document.inPrullenbak == false and document.onderwerp == 'overige' %}
{% set empty = false %}
                <tr>
                    <th>
                        <a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_detaildocument', {'dossierId': dossier.id, 'documentId': document.document.id}) }}">{{ document.document.naam }}</a>
                    </th>
                    <td>
{% if document.schuldItem %}Schulditem: {{ document.schuldItem.schuldeiser.bedrijfsnaam }}/{{ document.schuldItem.referentie }}{% endif %} 
{% if document.onderwerp %}Onderwerp: {{ document.onderwerp}}{% endif %} 
                    </td>
                </tr>
{% endfor %}
            </tbody>
        </table>
{% if empty %}
        <p class="empty-table">Er zijn nog geen documenten in dit dossier toegevoegd.</p>
{% endif %}
    </div>
</div>
{% endblock %}