{% extends 'base.html.twig' %}

{% block title %}
	Dossier prullenbak
{% endblock %}

{% block main %}
	<h1>Prullenbak</h1>
	<p>
		<a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_index') }}">Overzicht</a>
	</p>
	
	<table>
		<thead>
			<tr>
				<th>Naam</th>
				<th>MaDi</th>
				<th>Regas</th>
				<th>Allegro</th>
			</tr>
		</thead>
		<tbody>
{% for dossier in dossiers %}
			<tr>
				<td><a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appdossier_detail', {'dossierId': dossier.Id}) }}">{{ dossier.clientNaam }}</a></td>
				<td>{{ dossier.schuldhulpbureau }}</td>
				<td class="nummer">
					{{ dossier.regasNummer|default('-') }} 
				</td>
				<td class="nummer">
					{{ dossier.allegroNummer|default('-') }} 
				</td>
			</tr>
{% endfor %}
	   </tbody>
	</table>
{% if dossiers|length == 0 %}
	<p>Prullenbak is leeg</p>
{% endif %}
{% endblock %}