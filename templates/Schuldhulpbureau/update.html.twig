{% extends 'master.html.twig' %}

{% block title %}Schuldhulpbureau: {{ schuldhulpbureau.naam }} - {{ parent() }}{% endblock %}

{% block pdfsplitter %}{% endblock %}

{% block document %}
<nav class="nav-internal">
    <ul>
        <li><a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appschuldhulpbureau_index') }}"><i class="icon-arrow-left"></i> Terug naar overzicht</a></li>
    </ul>
</nav>

<div class="document well">
    <div class="document-header">
        <h1 class="document-title">Schuldhulpbureau: {{ schuldhulpbureau.naam }}</h1>
    </div>
    <div class="form-container">
        {{ form_start(form, {'attr': {'class': 'default-form-style'} }) }}
        {{ form_row(form.naam) }}
        {{ form_row(form.emailAdresControle) }}
        {{ form_row(form.standaardGkaTeam) }}
        <p class="buttons right">
            <button type="submit" class="button primary">Opslaan</button>
            <a href="{{ path('gemeenteamsterdam_fixxxschuldhulp_appschuldhulpbureau_index') }}">Annuleren</a>
        </p>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}