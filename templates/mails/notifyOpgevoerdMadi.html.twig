{% block subject -%}
    Nieuw schulddossier ({{ dossier.getSchuldhulpbureau().getNaam() }})
{%- endblock  %}

{% block html -%}
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{{ block('subject') }}</title>
    </head>
    <body>
        <p>Hallo,</p>
        <p>Er staat een nieuw dossier ter controle klaar.</p>
        <p>&nbsp;</p>
        <p>Afzender: {{ tokenStorage.getToken().getUser().getNaam() }}</p>
        <p>Aangeboden op: {{ 'now'|date('d-m-Y') }}</p>
        <p>&nbsp;</p>
        {% if dossier.regasNummer is not empty %}
        <p>Regas nummer: {{ dossier.regasNummer }}</p>
        {% endif %}
        {% if dossier.allegroNummer is not empty %}
        <p>Allegro nummer: {{ dossier.allegroNummer }}</p>
        {% endif %}
        <p>&nbsp;</p>
        <p><a href="{{ url('gemeenteamsterdam_fixxxschuldhulp_appdossier_detailvoorlegger', {'dossierId': dossier.getId}) }}">Open dossier</a>
    </body>
</html>
{%- endblock %}

